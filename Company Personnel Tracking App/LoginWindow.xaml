<Window x:Class="Company_Personnel_Tracking_App.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Company_Personnel_Tracking_App.Views"
        mc:Ignorable="d"
        Title="Company Personnel Tracking App" Height="200" Width="350" WindowStartupLocation="CenterScreen" Background="#FFA9AAFF" FontSize="18" FontWeight="Bold">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="UserNo" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUserNo" Grid.Column="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center" PreviewTextInput="txtUserNo_PreviewTextInput"/>
        <Label Content="Password" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPassword" Grid.Column="1" Grid.Row="1" Width="150" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnLogin" Content="Login" Grid.Row="2" Margin="60,0,15,0" VerticalAlignment="Center" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" Grid.Row="2" Grid.Column="1" Margin="15,0,60,0" VerticalAlignment="Center" Click="btnExit_Click"/>
    </Grid>
</Window>
